---
layout: null
---
<?xml version="1.0" encoding="utf-8"?>
{% if page.xsl %}
  <?xml-stylesheet type="text/xml" href="{{ '/codelog.xslt.xml' | absolute_url }}"?>
{% endif %}
<feed xmlns="http://www.w3.org/2005/Atom"{% if site.lang %} xml:lang="{{ site.lang }}"{% endif %}>
  <generator uri="http://jekyllrb.com" version="{{ jekyll.version }}">Jekyll</generator>
  <link href="{{ page.url | absolute_url }}" rel="self" type="application/atom+xml" />
  <link href="{{ '/' | absolute_url }}" rel="alternate" type="text/html" {% if site.lang %}hreflang="{{ site.lang }}" {% endif %}/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>{{ '/' | absolute_url | xml_escape }}/</id>

  {% if site.title %}
    <title type="html">{{ site.title | smartify | xml_escape }} Coding Blog</title>
  {% elsif site.name %}
    <title type="html">{{ site.name | smartify | xml_escape }} Coding Blog</title>
  {% endif %}

  {% if site.description %}
    <subtitle>{{ site.description | xml_escape }}</subtitle>
  {% endif %}

  {% if site.author %}
    <author>
        <name>{{ site.author.name | default: site.author | xml_escape }}</name>
      {% if site.author.email %}
        <email>{{ site.author.email | xml_escape }}</email>
      {% endif %}
      {% if site.author.uri %}
        <uri>{{ site.author.uri | xml_escape }}</uri>
      {% endif %}
    </author>
  {% endif %}

  {% assign codelogs = site.codelog | sort: 'date' | reverse %}
  {% for codelog in codelogs limit: 10 %}
    <entry{% if codelog.lang %} xml:lang="{{ codelog.lang }}"{% endif %}>
      <title type="html">{{ codelog.title | smartify | strip_html | normalize_whitespace | xml_escape }}</title>
      <link href="{{ codelog.url | absolute_url }}" rel="alternate" type="text/html" title="{{ codelog.title | xml_escape }}" />
      <published>{{ codelog.date | date_to_xmlschema }}</published>
      <updated>{{ codelog.last_modified_at | default: codelog.date | date_to_xmlschema }}</updated>
      <id>{{ codelog.id | absolute_url | xml_escape }}</id>
      <content type="html" xml:base="{{ codelog.url | absolute_url | xml_escape }}">{{ codelog.content | strip | xml_escape }}</content>

      {% assign post_author = codelog.author | default: codelog.authors[0] | default: site.author %}
      {% assign post_author = site.data.authors[post_author] | default: post_author %}
      {% assign post_author_email = post_author.email | default: nil %}
      {% assign post_author_uri = post_author.uri | default: nil %}
      {% assign post_author_name = post_author.name | default: post_author %}

      <author>
          <name>{{ post_author_name | default: "" | xml_escape }}</name>
        {% if post_author_email %}
          <email>{{ post_author_email | xml_escape }}</email>
        {% endif %}
        {% if post_author_uri %}
          <uri>{{ post_author_uri | xml_escape }}</uri>
        {% endif %}
      </author>

      {% if codelog.category %}
        <category term="{{ codelog.category | xml_escape }}" />
      {% endif %}

      {% for tag in codelog.tags %}
        <category term="{{ tag | xml_escape }}" />
      {% endfor %}

      {% if codelog.excerpt and codelog.excerpt != empty %}
        <summary type="html">{{ codelog.excerpt | strip_html | normalize_whitespace | xml_escape }}</summary>
      {% endif %}

      {% assign post_image = codelog.image.path | default: codelog.image %}
      {% if post_image %}
        {% unless post_image contains "://" %}
          {% assign post_image = post_image | absolute_url | xml_escape  %}
        {% endunless %}
        <media:thumbnail xmlns:media="http://search.yahoo.com/mrss/" url="{{ post_image }}" />
      {% endif %}
    </entry>
  {% endfor %}
</feed>
